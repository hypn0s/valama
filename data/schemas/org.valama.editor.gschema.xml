<schemalist>
    <flags id="org.valama.editor.spacesflags">
        <value nick="space" value="1"/>
        <value nick="tab" value="2"/>
        <value nick="newline" value="4"/>
    </flags>

    <schema id="org.valama.editor" path="/org/valama/editor/" gettext-domain="valama">

        <key name="color-scheme" type="s">
            <default>"classic"</default>
            <summary>Color scheme of the editor</summary>
            <description>
            </description>
        </key>

        <key name="font" type="s">
            <default>"monospace 11"</default>
            <summary>Font of the editor</summary>
            <description>
            </description>
        </key>

        <key name="show-line-numbers" type="b">
            <default>true</default>
            <summary>Show the line numbers in the editor</summary>
            <description>
            </description>
        </key>

        <key name="use-spaces-instead-of-tabs" type="b">
            <default>true</default>
            <summary>Insert spaces instead of tabs</summary>
            <description>
            </description>
        </key>

        <key name="tab-width" type="i">
            <default>4</default>
            <summary>Width of tabulation in characters</summary>
            <description></description>
        </key>
        <key name="highlight-matching-brackets" type="b">
            <default>true</default>
            <summary>Highlight the matching brackets</summary>
            <description>
            </description>
        </key>

        <key name="highlight-syntax" type="b">
            <default>true</default>
            <summary>Highlight the syntax</summary>
            <description>
            </description>
        </key>

        <key name="show-right-margin" type="b">
            <default>false</default>
            <summary>Show the right margin</summary>
            <description></description>
        </key>

        <key name="right-margin-position" type="i">
            <default>80</default>
            <summary>Right margin position</summary>
            <description></description>
        </key>

        <key name="show-spaces" flags="org.valama.editor.spacesflags">
            <default>[]</default>
            <summary>Show different spaces character</summary>
            <description>
            </description>
        </key>

        <key name="auto-indent" type="b">
            <default>true</default>
            <summary>Auto indent the code</summary>
            <description>
            </description>
        </key>
    </schema>
</schemalist>
